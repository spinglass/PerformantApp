<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PerformantApp.Common">

    <!-- Background styles -->

    <Style x:Key="BaseGrid" TargetType="Grid">
        <Setter Property="Background" Value="#FF003B78"/>
    </Style>

    <Style x:Key="MonitorBorder" TargetType="Border">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Background" Value="#FF00162D"/>
    </Style>
    
    <Style x:Key="MonitorCanvas" TargetType="Canvas">
        <Setter Property="Background" Value="#FF688AA8"/>
    </Style>
    
    <Style x:Key="BaseRect" TargetType="Rectangle">
        <Setter Property="Fill" Value="#FF00162D"/>
    </Style>

    <!-- TextBlock styles -->
    
    <Style x:Key="BaseText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FF00162D"/>
        <Setter Property="FontSize" Value="{StaticResource ControlContentThemeFontSize}"/>
        <Setter Property="FontFamily" Value="Verdana"/>
    </Style>

    <Style x:Key="DataText" TargetType="TextBlock" BasedOn="{StaticResource BaseText}">
        <Setter Property="FontSize" Value="40" />
        <Setter Property="TextAlignment" Value="Right" />
    </Style>

    <Style x:Key="DataLabelText" TargetType="TextBlock" BasedOn="{StaticResource BaseText}">
        <Setter Property="FontSize" Value="12" />
    </Style>
    
</ResourceDictionary>
